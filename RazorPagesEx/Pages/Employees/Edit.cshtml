@page "{id:int:number}"
@using RazorPagesEx.Models
@model RazorPagesEx.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Employee Details";
}

<div class="card">
    <div class="card-header">
        <h5>Edit Employee</h5>
    </div>
    <form method="post">
        <div class="card-body">
                <div class="row col-md-12 mb-4">
                    <div class="col-4">
                        <input type="hidden" asp-for="Employee.Id" />
                        <label for="Employee.Name">Name:</label>
                        <input type="text" class="form-control" asp-for="Employee.Name">
                    </div>
                    <div class="col-4">
                        <label for="Employee.Email">Email:</label>
                        <input type="text" class="form-control" asp-for="Employee.Email">
                    </div>
                </div>
                <div style="width: 20%">
                    <label for="Employee.Department">Department:</label>
                    <select class="form-select select2" asp-for="Employee.Department" asp-items="Html.GetEnumSelectList<Dept>()"></select>
                </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>